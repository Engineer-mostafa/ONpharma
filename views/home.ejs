            <!--Patient Form Regesteration-->
            <!--------------------------------------------------------------------------------------------------------------------------------------------------------------------------->
            <form id="registrationFormPatient" class="form-validate" method="POST">

                <div class="modal fade" id="modal-1" tabindex="-1" role="modal" aria-labelledby="modal-label-3"
                    aria-hidden="true">
                    <div class="modal-dialog modal-md modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">

                                <h4 id="modal-label-3" class="modal-title">Register As A Patient</h4>
                                <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                                <!-- this hidden field for definnig the type of regestirtion in backend -->
                                <input aria-hidden="true" type="text" id="typed" class="hidden" name="type"
                                    value="Patient">
                            </div>
                            <div class="modal-body">
                                <div class="form-row">

                                    <div class="form-group col-md-6">
                                        <label for="FirstNamep">First Name<span class="text-danger">*</span></label>
                                        <input type="text" id="FirstNamepatient" class="form-control" name="FirstNamep"
                                            placeholder="Enter first name" required>

                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="FirstNamep">Min Name<span class="text-danger">*</span></label>
                                        <input type="text" id="Mnamepatient" class="form-control" name="MNamep"
                                            placeholder="Enter Minname name" required>

                                    </div>
                                </div>
                                <div class="form-row">

                                    <div class="form-group col-md-6">
                                        <label for="LastNamep">Last Name<span class="text-danger">*</span></label>
                                        <input type="text" id="LastNamelpatient" class="form-control" name="LastNamep"
                                            placeholder="Enter second name" required>

                                    </div>
                                    <div class="form-group col-md-6">




                                        <label for="bd">Birth Date<span class="text-danger">*</span></label>
                                        <input type="date" id="bdpatient" class="form-control" name="Bdate"
                                            placeholder="Enter second name" required>

                                            
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="Emailaddressp">Email address<span
                                                class="text-danger">*</span></label>
                                        <input type="email" id="Emailaddressp" class="form-control" name="Emailaddressp"
                                            placeholder="Enter your email" required>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="Passwordp">Password<span class="text-danger">*</span></label>
                                        <input type="password" id="Passwordp" class="form-control" name="Passwordp"
                                            placeholder="Password" required>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="Genderp">Gender<span class="text-danger">*</span></label>
                                        <select class="form-control" id="Genderp" name="Genderp" required>
                                            <option value=-1>Select your gender</option>
                                            <option value=0>Male</option>
                                            <option value=1>Female</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="mobilep">Mobile<span class="text-danger">*</span></label>
                                        <input class="form-control" id="Mobilep" type="number" name="Mobilep"
                                            placeholder="Enter your Mobile number" required>
                                    </div>
                                    <%if(typeof errors == "undefined"){%>
                                       
                                 <% } else { %>
                                         
                                       <p><%= errors%></p>   
                                    <%}%>
                                    
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button data-dismiss="modal" class="btn btn-b" type="button">Close</button>
                                <button class="btn btn-b" id ="signup-btn" type="submit">Sign Up</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>







